<div id="smallcontainer">
	<div class="container" style="background-color: #0a2638">
		<h1 class="display-4" style="color: rgba(255, 255, 255, 0.9)"> Your favourite artists </h1>
		<hr>
		<div class="row">
		<% for( let i = 0; i < 3; i++ ) { %>
				<div class="col-sm-4">
					<div class="artist-card" style="width: 18rem;" artist-id="<%=artist.artisti[i].id%>">
						<img src=<%= artist.artisti[i].image.url %> class="card1">
						<div class="card-body">
							<h5 class="card-title"><%= artist.artisti[i].name %></h5>
						</div>
					</div>
				</div>
		<% } %>
		</div>
		<hr>
		<div class="row">
			<% for( let i = 3; i < 6; i++ ) { %>
					<div class="col-sm-4">
						<div class="artist-card" style="width: 18rem;" artist-id="<%=artist.artisti[i].id%>">
							<img src=<%= artist.artisti[i].image.url %> class="card1">
							<div class="card-body">
								<h5 class="card-title"><%= artist.artisti[i].name %></h5>
							</div>
						</div>
					</div>
			<% } %>
		</div>
		<hr>
		<hr>
		<hr>
		<h1 class="display-4" style="color: rgba(255, 255, 255, 0.9)"> Your favourite songs </h1>
		<hr>
    	<div class="row">
			<% for( let i = 0; i < 3; i++ ) { %>
					<div class="col-sm-4">
						<div class="song-card" style="width: 18rem;" artist-name = "<%= tracks.tracks[i].nameartist %>" song-name = "<%= tracks.tracks[i].name%>" >
							<img src=<%= tracks.tracks[i].image %> class="card1">
							<div class="card-body">
								<h5 class="card-title"><%= tracks.tracks[i].name %></h5>
							</div>
						</div>
					</div>
			<% } %>
		</div>
		<hr>
		<div class="row">
			<% for( let i = 3; i < 6; i++ ) { %>
					<div class="col-sm-4">
						<div class="song-card" style="width: 18rem;" artist-name = "<%= tracks.tracks[i].nameartist %>" song-name = "<%= tracks.tracks[i].name%>">
							<img src=<%= tracks.tracks[i].image %> class="card1">
							<div class="card-body">
								<h5 class="card-title"><%= tracks.tracks[i].name %></h5>
							</div>
						</div>
					</div>
			<% } %>
		</div>
	</div>
	<script>
		var url = new URL(window.location.href);
		var token = url.searchParams.get("access_token");
		
		$(document).ready(function(){
			$(".artist-card").mouseenter(function(){
				$(this).children(".card1").css({
						filter: "brightness(50%)",
				});
			});
			$(".artist-card").mouseleave(function(){
				$(this).children(".card1").css({
						filter: "brightness(100%)",
				});
			});
			$(".artist-card").click(function() {
				window.location.href = "http://localhost:3000/artists" + "?access_token=" + token + "&" + "id=" + $(this).attr("artist-id") + "s";
			});
	
		});
	
		$(document).ready(function(){
			$(".song-card").mouseenter(function(){
				$(this).children(".card1").css({
						filter: "brightness(50%)",
				});
			});
			$(".song-card").mouseleave(function(){
				$(this).children(".card1").css({
						filter: "brightness(100%)",
				});
			});
			$(".song-card").click(function(){
				var artist=$(this).attr("artist-name");
				var song=$(this).attr("song-name");
				console.log("elements :" + artist + "\n" + song);
				geniusRef(artist,song)
				
			});
		});
	</script>
	<script>

	</script>
	<script src ="../script/geniusref.js"></script>
</div>

